{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/packages/*": ["../../packages/*"],
      "@packages": ["../../packages"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/contract/contract-template.ts",
    "../../packages/contract/contract-types.ts",
    "../../packages/contract/contract-generator.ts",
    "../../packages/contract/contract-data-service.ts",
    "../../packages/contract/ContractRenderer.tsx"
  ],
  "exclude": ["node_modules"]
}
